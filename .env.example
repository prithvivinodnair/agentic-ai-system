# LLM Provider Selection
# Options: "gemini" (FREE), "ollama" (FREE, local), "openai" (paid)
LLM_PROVIDER=gemini

# Google Gemini API (FREE - Get key at: https://makersuite.google.com/app/apikey)
GOOGLE_API_KEY=your_google_api_key_here

# OpenAI API (PAID - only if using openai provider)
OPENAI_API_KEY=your_openai_api_key_here

# Ollama Settings (FREE - local models, no API key needed)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# Model Configuration
TEMPERATURE=0.7
MAX_TOKENS=2000
